<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/elements"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_elem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_todoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toEndOf="@id/checkBox_elem"
            android:layout_centerVertical="true"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_todoContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_toEndOf="@id/checkBox_elem"
            android:layout_below="@id/txt_todoTitle"
            android:textColor="@color/gray"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.IconButton"
            android:id="@+id/btn_todoEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:icon="@drawable/baseline_edit_24"
            app:iconTint="@color/white"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

